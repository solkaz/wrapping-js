{
  "compilerOptions": {
    "incremental": true,
    "target": "es5",
    "lib": ["es2015"],
    "module": "commonjs",
    "outDir": "dist",
    "declaration": true,
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true
  },
  "files": ["index.ts", "index.test.ts"]
}
